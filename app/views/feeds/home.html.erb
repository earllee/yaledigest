</div>


<div id="board" class="container">
	<ol class="listing">
		<% i = 0 %>
		<% @articles.each do |article| %>
			<% src = case article["source"] 
					when "The Yale Herald" then "success"
					when "Yale Daily News" then "info"
					when "Yale News" then "important"
					else "default"
					end
			%>

			<li>
			<a href="#" data-toggle="collapse" data-target=	"#desc<%= i %>">
				<%= article["title"] %>
			</a>
			<span class="label label-<%= src %>"><%= article["source"] %></span>
			<p id="desc<%= i %>" class="collapse">
				<%= article["description"].html_safe %>
				<% readMoreLink = (article["content"].empty? ? article["link"] : "#content#{i}")%>
				<a href="<%= readMoreLink %>" data-toggle="modal">[Read more]</a>
			</p>
			<div id="content<%= i %>" class="modal hide fade">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
					<a href="<%= article["link"] %>"><%= article["title"] %></a> 
				</div>
				<div class="modal-body">
					<%= article["content"].html_safe %>
				</div>
			</div>
			</li>
			<% i += 1 %>
		<% end %>
	</ol>
	<hr>

</div>
</body>
